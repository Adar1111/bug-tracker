pipeline {
    agent any

    stages {
        stage('Execute Unit Tests') {
            parallel {

                // --- שלב באק-אנד (Go) ---
                stage('Unit Test - Backend') {
                    agent {
                        docker {
                            image 'snakee/golang-junit:1.21'
                            reuseNode true
                        }
                    }
                    steps {
                        withEnv(['GOCACHE=/tmp/go-build-cache', 'GOMODCACHE=/tmp/go-mod-cache']) {
                            dir('bugtracker-backend') {
                                sh '''
                                    set -o pipefail
                                    # הרצת טסטים ויצירת דוח XML
                                    go test -v ./... 2>&1 | go-junit-report > test-results.xml
                                    
                                    # יצירת דוח Coverage
                                    go test -coverprofile coverage.out -covermode atomic ./cmd/... ./internal/...
                                    go tool cover -html coverage.out -o coverage.html
                                    
                                    # יצירת תיקייה ייעודית לדוחות
                                    mkdir -p reports
                                    mv coverage.html reports/
                                '''
                            }
                        }
                    }
                    post {
                        always {
                            // ג'נקינס מחפש את הקובץ יחסית לשורש הפרויקט
                            junit 'bugtracker-backend/test-results.xml'
                            publishHTML target: [
                                reportDir: 'bugtracker-backend/reports',
                                reportFiles: 'coverage.html',
                                reportName: 'Backend Coverage Report',
                                allowMissing: true 
                            ]
                        }
                    }
                }

                // --- שלב פרונט-אנד (React/Node) ---
                stage('Unit Test - Frontend') {
                    agent { 
                        docker {
                            image 'node:20-alpine'
                            reuseNode true
                        }
                    }
                    steps {
                        dir('bugtracker-frontend') {
                            sh '''
                                npm ci
                                # הגדרת שם הקובץ ש-jest-junit ייצור
                                export JEST_JUNIT_OUTPUT_NAME="junit.xml"
                                # הרצת הטסטים (שימוש ב-CI=true מונע מצב של המתנה לקלט)
                                CI=true npm test -- --coverage --reporters=default --reporters=jest-junit
                            '''
                        }
                    }
                    post {
                        always {
                            // הנתיב לקובץ ה-XML שנוצר בתוך תיקיית הפרונט-אנד
                            junit 'bugtracker-frontend/junit.xml'
                            
                            publishHTML target:[
                                // כברירת מחדל Jest יוצר את הדוח בנתיב הזה
                                reportDir: 'bugtracker-frontend/coverage/lcov-report',
                                reportFiles: 'index.html',
                                reportName: 'Frontend Coverage reports',
                                allowMissing: true
                            ]
                        }
                    }
                }
                
            } // סגירת parallel
        } // סגירת Execute Unit Tests
    }
    
    post {
        always {
            // ניקוי סביבת העבודה בסיום
            cleanWs()
        }
    }
}