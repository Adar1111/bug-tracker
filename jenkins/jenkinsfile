pipeline {
    agent any

    stages {
        stage('Unit_sest - baclend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                // התיקון: הוספנו גם את GOMODCACHE לתיקיית TMP
                withEnv(['GOCACHE=/tmp/go-build-cache', 'GOMODCACHE=/tmp/go-mod-cache']) {
                    dir('bugtracker-backend') {
                        sh 'go test -v ./...'
                    }
                }
            }
        }
        stage('Unit_sest - Frontend'){
            anget {
                docker{
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps{
                dir('bugtracker-frontend'){
                    sh '''
                        npm ci
                        npm test

                    '''
                }
            }
        }


    }
}
