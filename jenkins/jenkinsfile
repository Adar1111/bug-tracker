pipeline {
    agent any

    stages {
        
        // --- שלב הבאקנד (Unit Test - Backend) ---
        stage('Unit Test - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                withEnv(['GOCACHE=/tmp/go-build-cache', 'GOMODCACHE=/tmp/go-mod-cache']) {
                    dir('bugtracker-backend') {
                        // set -o pipefail מבטיח שהשלב ייכשל אם הטסטים נכשלים
                        sh '''
                        set -o pipefail 
                        go test -v ./... 2>&1 | go-junit-report > test-results.xml
                        
                        # Generate coverage report
                        go test -coverprofile coverage.out -covermode atomic ./cmd/... ./internal/...
                        go tool cover -html coverage.out -o coverage.html

                        mkdir -p reports
                        mv coverage.html reports/
                        '''
                    }
                }
            }
            post {
                always {
                    junit testResults: 'bugtracker-backend/*.xml'
                    publishHTML target: [
                        reportDir: 'bugtracker-backend/reports',
                        reportFiles: 'coverage.html',
                        reportName: 'Backend Coverage Report',
                        // allowMissing: true ימנע כשל אם הדוח לא נוצר
                        allowMissing: true 
                    ]
                }
            }
        }

        // --- שלב הפרונטנד (מתוקן למניעת תקיעות וכישלונות) ---
        stage('Unit Test - Frontend') {
            agent { 
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                        npm ci
                        npm test
                        nkdir -p reports
                        mv coverage reports/
                        
                        
                        
                    '''
                }
            }
            post {
                always {
                    // הקובץ test-results.xml נוצר על ידי jest-junit
                    junit 'bugtracker-frontend/test-results.xml'
                    publishHTML target:[
                        reportDir: 'bugtracker-frontend/reports/coverage',
                        reportFiles: 'index HTML',
                        reportName: 'Frontend Coverage reports'
                    ]
                }
            }
        }
    }
}