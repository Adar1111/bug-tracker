pipeline {
    agent any

    stages {
        stage('Unit_sest - baclend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                // התיקון הקריטי: הגדרת משתנה סביבה GOCACHE לתיקיית TMP
                withEnv(['GOCACHE=/tmp/go-build-cache']) {
                    dir('bugtracker-backend') {
                        sh 'go test -v ./...'
                    }
                }
            }
        }
    }
}