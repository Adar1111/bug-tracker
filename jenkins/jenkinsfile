pipeline {
    agent any

    stages {
        // שלב הבקנד (שכבר עובד מצוין)
        stage('Unit Test - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            steps {
                withEnv(['GOCACHE=/tmp/go-build-cache', 'GOMODCACHE=/tmp/go-mod-cache']) {
                    dir('bugtracker-backend') {
                        sh 'go test -v ./...  2>&1 |go-junit-report > test-results.xml'
                    }
                }
            }
            post {
                always{
                    junit 'bugtracker-backend/*.xml'
                }
            }
        }

        // שלב הפרונטנד (התיקון כאן)
        stage('Unit Test - Frontend') {
            agent { // תוקן מ-anget ל-agent
                docker {
                    image 'node:20-alpine'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                        npm ci
                        npm test
                    '''
                }
            }
            post {
                always{
                    junit 'bugtracker-frontend/test-results.xml'
                }
            }
        }
    }
}